<p style="color: green"><%= notice %></p>

<% if current_user != nil %>
  <p>Connecté -> <%= link_to "Déconnexion", destroy_user_session_path %></p>
<% else %>
  <p>Déconnecté -> <%= link_to "Connexion", new_user_session_path %></p> 
<% end %>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
    </p>
  <% end %>
</div>

<%= link_to "New item", new_item_path %>
