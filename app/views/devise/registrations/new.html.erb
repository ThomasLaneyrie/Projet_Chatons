
<div class="form-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-center mb-4">
<h2>Sign up</h2>
</div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<div class=" d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
<div class="actions">
   <%= f.submit "Sign up", class:"btn btn-primary shadow-0 me-1" %>
   </div>
   <%= link_to "Log in", new_user_session_path, class: "btn btn-light shadow-0 text-primary pt-2 border border-white"%>
</div>
<% end %>
</div>

