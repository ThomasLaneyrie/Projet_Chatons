<div class="form-container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="text-center mb-4">
    <h5>Forgot your password?</h5>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Reset password", class: "btn btn-primary shadow-0 me-1" %>
  </div>
  <div class=" d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
  <div class="actions">
     <%= f.submit "Log in", class:"btn btn-primary shadow-0 me-1" %>
     </div>
     <%= link_to "Sign up", new_user_registration_path, class: "btn btn-light shadow-0 text-primary pt-2 border border-white"%>
  </div>
<% end %>
</div>